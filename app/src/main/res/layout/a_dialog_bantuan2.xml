<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/label_kategori"
        android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:text="Pilih kategori tanaman"
        android:textSize="16dp"/>
    <Spinner
        android:id="@+id/pilihKategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/categoryselect"
        android:layout_below="@+id/label_kategori"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/label_nama"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama tanaman"
        android:layout_below="@+id/pilihKategori"
        android:textSize="16dp"/>
    <AutoCompleteTextView
        android:id="@+id/cariBantuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:text=""
        android:textColor="#000000"
        android:layout_below="@+id/label_nama"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:imeOptions="actionDone"/>
</RelativeLayout>